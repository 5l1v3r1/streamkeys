{
  "manifest_version": 2,
  "name": "Grooveshark Hotkeys",
  "description": "Global hotkeys for grooveshark",
  "version": "0.8",
  "icons": {"48": "icon48.png", "128": "icon128.png"},
  "background": {
    "scripts": [
      "lib/jquery-1.10.2.js",
      "background/bgCommunicator.js",
      "background/background.js"
    ]
  },
  "content_scripts": [{
    "matches": [ "<all_urls>" ],
    "js": [
      "lib/jquery-1.10.2.js",
      "contentscript/csCommunicator.js",
      "contentscript/contentscript.js"
    ]
  }],
  "web_accessible_resources": ["lib/jquery-1.10.2.js"],
  "permissions": ["tabs", "<all_urls>"],
  "commands": {
    "play-pause": {
      "suggested_key": { "default": "Alt+Q" },
      "description": "Pauses/Plays current song."
    },
    "play-next": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Skips to next song."
    },
    "play-prev": {
      "suggested_key": { "default": "Alt+A" },
      "description": "Skips to previous song."
    },
    "mute": {
      "suggested_key": { "default": "Alt+M" },
      "description": "Toggles volume mute."
    }
  }
}