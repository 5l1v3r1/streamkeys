{
  "manifest_version": 2,
  "name": "Streamkeys: Global Music Player Hotkeys",
  "description": "Global hotkeys for online music players including support for media keys.",
  "version": "1.2.0",
  "icons": {"48": "icon48.png", "128": "icon128.png"},
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "content_scripts": [ 
    {
      "matches": [ "<all_urls>" ],
      "js": ["lib/jquery-1.10.2.js", "contentscript/contentscript.js"]
    }, 
    {
      "matches": ["*://*.grooveshark.com/*"],
      "js": ["controllers/BaseController.js", "controllers/GroovesharkController.js"]
    },
    {
      "matches": ["*://*.pandora.com/*"],
      "js": ["controllers/BaseController.js", "controllers/PandoraController.js"]
    }
  ],
  "web_accessible_resources": ["lib/jquery-1.10.2.js"],
  "permissions": ["tabs", "storage"],
  "commands": {
    "play_pause": {
      "suggested_key": {
        "default": "MediaPlayPause",
        "mac": "Alt+Shift+2"
      },
      "description": "Toggle play/pause"
    },
    "play_next": {
      "suggested_key": {
        "default": "MediaNextTrack",
        "mac": "Alt+Shift+3"
      },
      "description": "Play next track"
    },
    "play_prev": {
      "suggested_key": {
        "default": "MediaPrevTrack",
        "mac": "Alt+Shift+1"
      },
      "description": "Play previous track"
    },
    "mute": {
      "suggested_key": {
        "default": "Alt+Shift+M",
        "mac": "Command+Shift+M"
      },
      "description": "Toggle mute"
    }
  }
}